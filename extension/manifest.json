{
  "manifest_version": 3,
  "name": "Sourcegraph NLP Extension",
  "description": "An extension built to extract code search queries from voice and text.",
  "version": "1.0.1",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "https://sourcegraph.com/search"
  ],
  "background": {
    "service_worker": "background.js"
  }
}